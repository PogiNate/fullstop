#!/usr/bin/env ruby -w

require 'fileutils'

include FileUtils

source = ARGV[0]
destination = ARGV[1]

checkout_dir = File.expand_path("~")
chdir checkout_dir
%x[git clone #{source} dotfiles]

mkdir_p destination
chdir destination

Dir["#{checkout_dir}/dotfiles/.*"].each do |file|
  puts file
  next if ['.','..'].include?(File.split(file)[-1])
  puts file
  ln file,'.'
end


